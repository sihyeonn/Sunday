extends ./layout/board.pug
block title
  div.jumbotron.my-2
    h2= title
      small - View Content
block content
  .border.border-primary.rounded.p-3
    b= data.title
  .border.border-primary.rounded.p-3.my-3= data.wDate
  .border.border-primary.rounded.p-3.my-3= data.content
  if data.fileTypeChk == 'img'
    .border.border-primary.rounded.p-3.my-3
      img.mw-100(src=`${data.filePath}`)
  else if data.fileTypeChk == 'file'
    .border.border-primary.rounded.p-3.my-3
      a(href=`/board/download/${data.id}`)= data.orgFile
  .p-3.text-center
    button.btn.btn-primary#btnUpdate(data-id=`${data.id}`) Modify
    button.btn.btn-danger#btnDelete(data-id=`${data.id}`) Delete
    button.btn.btn-success#btnList List
